{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "eslint-import-resolver-alias"],
  "rules": {
    "react/jsx-props-no-spreading": 0
  },
  "settings": { 
    "import/resolver": {
      "alias": {
        "map": [
          ["components", "src/components/*"],
          ["util", "src/util/*"],
          ["assets", "assets/*"]
        ]
      }
    }
  }
}
